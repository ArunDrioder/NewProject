<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ninositsolution.packandmove">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Otp.OTPVerificationActivity"></activity>
        <activity android:name=".International.AirInboundActivity" />
        <activity android:name=".Login.LoginActivity" />
        <activity android:name=".Registration.RegistrationActivity" />
        <activity android:name=".International.AirOutboundActivity" />
        <activity android:name=".ResidentialAddRoomActivity" />
        <activity android:name=".OverviewResidentialActivity" />
        <activity android:name=".CustomClearence" />
        <activity android:name=".LabourActivity" />
        <activity android:name=".International.InternationalActivity" />
        <activity android:name=".TemproaryActivity" />
        <activity android:name=".DoorToDoor" />
        <activity android:name=".TruckRentalActivity" />
        <activity android:name=".LongDistanceActivity" />
        <activity android:name=".CartonActivity" />
        <activity android:name=".PackagingActivity" />
        <activity android:name=".FactoryActivity" />
        <activity android:name=".OfficeRemovalActivity" />
        <activity android:name=".BasicInfoActivity" />
        <activity android:name=".splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>